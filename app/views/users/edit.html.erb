
<div class="ui middle aligned center aligned grid">
<div class="column" style="max-width: 450px; margin-top:20px;">
<%= form_for(@user, html: {class: "ui form"}) do |f|  %>
  <h1 class="ui blue header">Profile</h1>
  <p></p>
  <div class="ui stacked segment">
    <div class="field">
      <div class="ui left icon input">
        <i class="user icon"></i>
        <%= f.text_field :name, placeholder: "User name" %>
      </div>
    </div>
    <div class="field">
      <div class="ui left icon input">
        <i class="dollar sign icon"></i>
        <%= f.text_field :budget, placeholder: "User budget" %>
      </div>
    </div>
    

    <div class="field">
      <div class="ui left icon input">
        <i class="lock icon"></i>
        <%= f.password_field :password, placeholder: "Password" %>
      </div>
    </div>
    <div class="field">
      <div class="ui left icon input">
        <i class="lock icon"></i>
        <%= f.password_field :password_confirmation, placeholder: "password_confirmation" %>
      </div>
    </div>
    <%= f.submit "Edit profile", class:"ui fluid large blue submit button"%>
  </div>
<% end %>
<% if flash[:message] %>
<div class="ui error message"><%= flash[:message]%> </div>
<% end %>
</div>
</div>